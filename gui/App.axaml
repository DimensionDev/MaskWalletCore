<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:styling="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             x:Class="Dimension.MaskCore.App">
    <Application.Styles>
        <styling:FluentAvaloniaTheme
            CustomAccentColor="#FF166ccd"
            UseSystemThemeOnWindows="True"
            UseSystemFontOnWindows="True"
            UseUserAccentColorOnWindows="True" />
        <Style Selector="TextBox">
            <Setter Property="FontFamily" Value="Microsoft YaHei,Simsun,苹方-简,宋体-简,Noto Sans CJK SC,Source Han Sans SC" />
        </Style>
    </Application.Styles>
</Application>